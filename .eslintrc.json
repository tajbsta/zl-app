{
    "ignorePatterns": [
        "build/"
    ],
    "extends": [
        "plugin:react/recommended",
        "airbnb",
        "preact"
    ],
    "settings": {
        "import/resolver": {
            "alias": {
                "map": [
                    ["Components", "./src/components"],
                    ["Assets", "./src/assets"],
                    ["Cards", "./src/routes/habitat/components/CardTabs/cards"],
                    ["Shared", "./src/shared"]
                ],
                "extensions": [".js"]
            }
        }
    },
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2020,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "no-console": 0,
        "react/prop-types": 0,
        "react/react-in-jsx-scope": 0,
        "react/jsx-filename-extension": 0,
        "react/jsx-fragments": 0,
        "import/no-extraneous-dependencies": ["error", {
            "devDependencies": [
              "tests/**",
              "src/sw.js",
              "src/redux/middlewares.js"
            ]
        }]
    }
}
